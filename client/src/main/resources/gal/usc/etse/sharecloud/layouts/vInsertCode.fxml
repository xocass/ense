<AnchorPane prefHeight="422.0" prefWidth="467.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gal.usc.etse.sharecloud.guiController.cInsertRecoveryCode">
   <children>
      <AnchorPane prefHeight="422.0" prefWidth="474.0" stylesheets="@../styles/log.css">
         <children>
            <Pane layoutY="-1.0" opacity="0.76" prefHeight="422.0" prefWidth="474.0" styleClass="login-background" />
            <VBox layoutX="18.0" layoutY="37.0" prefHeight="331.0" prefWidth="436.0">
               <children>
