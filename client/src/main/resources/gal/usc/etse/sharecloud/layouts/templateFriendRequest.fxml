<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="3" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gal.usc.etse.sharecloud.guiController.cFriendRequestItem">

    <!-- Avatar -->
    <ImageView fx:id="imgAvatar" onMouseClicked="#clickOnProfilePic" fitHeight="20" fitWidth="20" preserveRatio="true" smooth="true" styleClass="notification-avatar">
        <image>
         <Image url="@../imgs/default-pfp.png" />
        </image>
    </ImageView>
    <!-- <ImageView fx:id="imgAvatar" fitWidth="36" fitHeight="36" preserveRatio="true"/> -->

    <!-- Username -->
    <Label fx:id="labelName" onMouseClicked="#clickOnUsername" styleClass="notification-username" text="Username" underline="true">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label fx:id="labelMessage" styleClass="notification-username" text="te ha enviado una solicitud de amistad" />

    <Region HBox.hgrow="ALWAYS" />

    <Button fx:id="btnAccept" onAction="#clickOnAccept" styleClass="icon-circle-button success" text="✔" />
    <Button fx:id="btnReject" onAction="#clickOnReject" styleClass="icon-circle-button danger" text="✖" />
</HBox>
