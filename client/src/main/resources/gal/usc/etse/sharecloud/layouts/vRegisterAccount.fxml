<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="gal.usc.etse.sharecloud.guiController.cRegisterAccount"
            prefHeight="760"
            prefWidth="1200"
            stylesheets="@../styles/main.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <HBox AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- LEFT PANEL -->
        <StackPane prefWidth="600">

            <ImageView fitHeight="760" fitWidth="600" preserveRatio="false" smooth="true">
                <image>
                    <Image url="@../imgs/background-login.jpg"/>
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="20">
                <ImageView fitWidth="325" preserveRatio="true" smooth="true">
                    <image>
                        <Image url="@../imgs/sharecloud-logo.png"/>
                    </image>
                </ImageView>
            </VBox>

        </StackPane>

        <!-- RIGHT PANEL -->
        <StackPane prefWidth="600" styleClass="login-background">

            <VBox alignment="CENTER" spacing="28">

                <!-- Header -->
                <VBox alignment="CENTER" spacing="8">
                    <Label styleClass="title-text" text="Crea tu cuenta"/>

                    <HBox alignment="CENTER" spacing="6">
                        <Label styleClass="muted-text" text="¿Ya tienes cuenta?"/>
                        <Hyperlink fx:id="linkLogin"
                                   onAction="#clickOnGoBack"
                                   styleClass="link-text"
                                   text="Inicia sesión"
                                   underline="true"/>
                    </HBox>
                </VBox>

                <!-- Steps -->
                <HBox alignment="CENTER" spacing="80">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-active" text="1"/>
                        <Label styleClass="step-text-active" text="Introduce tus datos"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="2"/>
                        <Label styleClass="step-text-inactive" text="Vincula Spotify"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="3"/>
                        <Label styleClass="step-text-inactive" text="Registro completado"/>
                    </VBox>
                </HBox>

                <!-- Card -->
                <VBox alignment="CENTER"
                      maxWidth="520"
                      spacing="24"
                      styleClass="login-card">

                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Correo electrónico"/>
                        <TextField fx:id="fieldEmail"
                                   promptText="usuario@ejemplo.com"
                                   styleClass="text-input"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Contraseña"/>
                        <PasswordField fx:id="fieldPassword"
                                       promptText="••••••••"
                                       styleClass="text-input"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Repite contraseña"/>
                        <PasswordField fx:id="fieldRepeatPassword"
                                       promptText="••••••••"
                                       styleClass="text-input"/>
                    </VBox>

                    <Label fx:id="statusLabel"
                           styleClass="status-error"
                           wrapText="true"/>

                    <Button fx:id="btnContinue"
                            maxWidth="Infinity"
                            onAction="#clickOnContinue"
                            styleClass="primary-button"
                            text="Continuar"/>
                </VBox>

            </VBox>
        </StackPane>

    </HBox>
</AnchorPane>

