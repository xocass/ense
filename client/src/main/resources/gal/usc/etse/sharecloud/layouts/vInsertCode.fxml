                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="btnResendCode" layoutX="32.0" layoutY="14.0" mnemonicParsing="false" onAction="#clickOnResendCode" styleClass="button-register" stylesheets="@../styles/log.css" text="Reenviar código" />
                           </children>
                        </AnchorPane>
                     </children>
                  </VBox>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnGoBack" layoutX="32.0" layoutY="14.0" mnemonicParsing="false" onAction="#clickOnGoBack" styleClass="button-register" stylesheets="@../styles/log.css" text="Volver al inicio de sesión" />
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
