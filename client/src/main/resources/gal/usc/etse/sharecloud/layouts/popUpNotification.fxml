<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane
        styleClass="popup-root"
        stylesheets="@../styles/popup.css"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="gal.usc.etse.sharecloud.guiController.cPopUpNotification">

    <VBox prefWidth="520"
          prefHeight="360"
          spacing="18"
          styleClass="popup-card">

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" spacing="12">
            <StackPane styleClass="popup-icon">
                <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                    <image>
                        <Image url="@../imgs/icon-bell.png"/>
                    </image>
                </ImageView>
            </StackPane>

            <Label styleClass="popup-title" text="Notificaciones"/>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- CONTENT -->
        <ScrollPane
                fitToWidth="true"
                VBox.vgrow="ALWAYS"
                styleClass="popup-scroll">

            <content>
                <VBox fx:id="vboxNotifications"
                      spacing="12"
                      fillWidth="true"
                      styleClass="popup-list"/>
            </content>

        </ScrollPane>

        <!-- FOOTER -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnClose"
                    onAction="#clickOnClose"
                    text="Cerrar"
                    styleClass="popup-close-button"/>
        </HBox>

    </VBox>
</StackPane>

