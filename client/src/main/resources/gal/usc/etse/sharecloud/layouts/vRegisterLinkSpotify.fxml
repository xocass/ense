<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="760" prefWidth="1200" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gal.usc.etse.sharecloud.guiController.cRegisterLinkSpotify">

    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- LEFT -->
        <StackPane prefWidth="600">
            <ImageView fitHeight="760" fitWidth="600" preserveRatio="false" smooth="true">
                <image>
                    <Image url="@../imgs/background-login.jpg" />
                </image>
            </ImageView>

            <VBox alignment="CENTER">
                <ImageView fitWidth="325" preserveRatio="true" smooth="true">
                    <image>
                        <Image url="@../imgs/sharecloud-logo.png" />
                    </image>
                </ImageView>
            </VBox>
        </StackPane>

        <!-- RIGHT -->
        <StackPane prefWidth="600" styleClass="login-background">

            <VBox alignment="CENTER" spacing="56">

                <VBox alignment="CENTER" spacing="10">
                    <Label styleClass="title-text" text="Conecta tu cuenta de Spotify" />
                    <Label styleClass="muted-text" text="Necesitamos acceso a tu cuenta para ofrecerte la mejor experiencia" wrapText="true" />
                </VBox>

                <HBox alignment="CENTER" spacing="80">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="1" />
                        <Label styleClass="step-text-inactive" text="Introduce tus datos" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-active" text="2" />
                        <Label styleClass="step-text-active" text="Vincula Spotify" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="3" />
                        <Label styleClass="step-text-inactive" text="Registro completado" />
                    </VBox>
                </HBox>

                <VBox alignment="CENTER" maxWidth="600" spacing="24">
               <AnchorPane prefHeight="0.0" prefWidth="600.0">
                  <children>
                          <Button fx:id="btnLinkSpotify" layoutX="38.0" maxWidth="640" onAction="#clickOnLinkSpotify" prefHeight="56" prefWidth="523.0" styleClass="spotify-button" text="Conectar con Spotify" />
                  </children>
               </AnchorPane>

                    <Hyperlink fx:id="linkGoBack" onAction="#clickOnGoBack" styleClass="link-text" text="Volver a inicio de sesiÃ³n" underline="true" />

                    <Label fx:id="statusLabel" styleClass="status-error" wrapText="true" />
                </VBox>

            </VBox>
        </StackPane>

    </HBox>
</AnchorPane>
