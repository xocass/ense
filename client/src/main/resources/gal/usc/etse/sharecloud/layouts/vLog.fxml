<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
        fx:controller="gal.usc.etse.sharecloud.guiController.cLog"
        prefHeight="760"
        prefWidth="1200"
        stylesheets="@../styles/main.css"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1">

    <HBox AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- ================= LEFT PANEL ================= -->
        <StackPane prefWidth="600" styleClass="login-background">

            <VBox alignment="CENTER" spacing="32">

                <!-- Login Card -->
                <VBox alignment="CENTER"
                      maxWidth="520"
                      spacing="24"
                      styleClass="login-card">

                    <Label styleClass="title-text" text="Bienvenido" />

                    <!-- Email -->
                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Correo electrónico" />
                        <TextField fx:id="fieldEmail"
                                   promptText="usuario@ejemplo.com"
                                   styleClass="text-input" />
                    </VBox>

                    <!-- Password -->
                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Contraseña" />
                        <PasswordField fx:id="fieldPassword"
                                       promptText="••••••••"
                                       styleClass="text-input" />
                    </VBox>

                    <!-- Status -->
                    <Label fx:id="statusLabel"
                           styleClass="status-error"
                           visible="false"
                           wrapText="true" />

                    <!-- Login -->
                    <Button fx:id="btnLogin"
                            maxWidth="Infinity"
                            onAction="#clickOnLogin"
                            styleClass="primary-button"
                            text="Iniciar sesión" />

                    <!-- Forgot -->
                    <Hyperlink fx:id="forgotPasswordLink"
                               onAction="#clickOnForgotPassword"
                               styleClass="link-text"
                               text="¿Has olvidado tu contraseña?"
                               underline="true" />
                </VBox>

                <!-- Divider -->
                <HBox alignment="CENTER" spacing="16">
                    <Separator prefWidth="120" />
                    <Label styleClass="muted-text" text="¿No tienes cuenta?" />
                    <Separator prefWidth="120" />
                </HBox>

                <!-- Register -->
                <Button fx:id="btnRegister"
                        maxWidth="520"
                        onAction="#clickOnRegister"
                        styleClass="secondary-button"
                        text="Regístrate" />

            </VBox>
        </StackPane>

        <!-- ================= RIGHT PANEL ================= -->
        <StackPane prefWidth="600">

            <!-- Background image -->
            <ImageView fitHeight="760"
                       fitWidth="600"
                       preserveRatio="false"
                       smooth="true">
                <image>
                    <Image url="@../imgs/background-login.jpg" />
                </image>
            </ImageView>

            <!-- Branding -->
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitWidth="260"
                           preserveRatio="true"
                           smooth="true">
                    <image>
                        <Image url="@../imgs/sharecloud-logo.png" />
                    </image>
                </ImageView>
            </VBox>

        </StackPane>

    </HBox>
</AnchorPane>

