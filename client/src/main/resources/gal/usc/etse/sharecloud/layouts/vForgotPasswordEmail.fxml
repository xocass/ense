<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="760" prefWidth="1200" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gal.usc.etse.sharecloud.guiController.cForgotPasswordEmail">

    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- LEFT PANEL -->
        <StackPane prefWidth="600">
            <ImageView fitHeight="760" fitWidth="600" preserveRatio="false" smooth="true">
                <image>
                    <Image url="@../imgs/background-login.jpg" />
                </image>
            </ImageView>

            <VBox alignment="CENTER">
                <ImageView fitWidth="325" preserveRatio="true" smooth="true">
                    <image>
                        <Image url="@../imgs/sharecloud-logo.png" />
                    </image>
                </ImageView>
            </VBox>
        </StackPane>

        <!-- RIGHT PANEL -->
        <StackPane prefWidth="600" styleClass="login-background">

            <VBox alignment="CENTER" spacing="56">

                <Label styleClass="title-text" text="Recupera tu contraseña" />

                <!-- Steps -->
                <HBox alignment="CENTER" spacing="35.0">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-active" text="1" />
                        <Label styleClass="step-text-active" text="Introduce tu correo" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="2" />
                        <Label styleClass="step-text-inactive" text="Verifica el código" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="3" />
                        <Label styleClass="step-text-inactive" text="Nueva contraseña" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="step-inactive" text="4" />
                        <Label styleClass="step-text-inactive" text="Contraseña actualizada" />
                    </VBox>
                </HBox>

                <!-- Form -->
                <VBox alignment="CENTER" maxWidth="520" spacing="24" styleClass="login-card">

                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Correo electrónico" />
                        <TextField fx:id="fieldEmail" promptText="Inserta tu correo electrónico" styleClass="text-input" />
                    </VBox>

                    <Button fx:id="btnSendCode" maxWidth="Infinity" onAction="#clickOnSendCode" styleClass="primary-button" text="Enviar código" />

                    <Hyperlink fx:id="linkGoBack" onAction="#clickOnGoBack" styleClass="link-text" text="Volver a inicio de sesión" underline="true" />
                </VBox>

            </VBox>
        </StackPane>

    </HBox>
</AnchorPane>
